<section>
    {{#each posts as |post|}}
    <div class="card">
        <div class="card-header">
            {{post.title}}
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{post.content}}</p>
                <footer class="blockquote-footer">
                    <p>{{post.user.username}}</p>
                    {{!-- <p>{{format_date post.created_at}}</p> --}}
                </footer>
            </blockquote>
        </div>
    </div>
    {{/each}}
</section>

{{> make-post}}

<script src="/js/dashboard.js"></script>